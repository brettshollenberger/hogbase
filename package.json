{
  "name": "@your-org/experiment-library",
  "version": "1.0.0",
  "description": "A/B testing library for web applications",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "rollup -c",
